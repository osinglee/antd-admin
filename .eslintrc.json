{
  "extends": [
    "react-app"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": 0, // 检查 Hook 的规则
    "object-curly-spacing": 0,
    "no-else-return": 2,
    "no-unused-vars": 2,
    "no-empty": 2,
    "no-duplicate-case": 2,
    "no-alert": 2,
    "init-declarations": 2,
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "auto-self-close-empty-tags": 0
  }
}
